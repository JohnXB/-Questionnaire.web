
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Home/_HomeLayout.cshtml";
}
<link href="~/layui/css/layui.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Css/style.css">
<link href="~/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Css/User/Create.css" rel="stylesheet" />

<div id="head">&nbsp;</div>


<form class="layui-form iForm" action="/Home/CreateSave" method="post">
    <div class="layui-elem-quote" style="margin-top: 20px;">
        <p>创建一个新的问卷，注：本网站目前只支持单选题与多选题，不支持填空等问答题</p>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label iLabel" style="font-size:20px;">标题：</label>
        <div class="layui-input-block">
            <input type="text" name="questionnaire[QName]" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
        </div>
    </div>
    <fieldset style="margin-top:20px;">
        <legend>添加问题</legend>
        <div id="Question">
            <div class="ques" id="question1"><div class="layui-form-item iQuestion"><label class="layui-form-label iLabel">问题1：</label> <div class="layui-input-block">  <input type="text" name="questionnaire.Questions[0].QuestionName" required="" lay-verify="required" placeholder="请输入问题" autocomplete="off" class="layui-input input"> </div></div><div class="layui-form-item iQuestion"><label class="layui-form-label iLabel">问题类型</label> <div class="layui-input-block">    <input type="radio" name="questionnaire.Questions[0].Type" value="单选" title="单选" checked=""><div class="layui-unselect layui-form-radio layui-form-radioed"><i class="layui-anim layui-icon"></i><span>单选</span></div>    <input type="radio" name="questionnaire.Questions[0].Type" value="多选" title="多选"><div class="layui-unselect layui-form-radio"><i class="layui-anim layui-icon"></i><span>多选</span></div> </div> </div><div id="ques1"><div class="layui-form-item iAnswer"><label class="layui-form-label iLabel">选项1：</label> <div class="layui-input-block">  <input type="text" name="questionnaire.Questions[0].Options[0].OptionName" required="" lay-verify="required" placeholder="请输入答案" autocomplete="off" class="layui-input answer"> </div></div><div class="layui-form-item iAnswer"><label class="layui-form-label iLabel">选项2：</label> <div class="layui-input-block">  <input type="text" name="questionnaire.Questions[0].Options[1].OptionName" required="" lay-verify="required" placeholder="请输入答案" autocomplete="off" class="layui-input answer"> </div></div></div><button class="layui-btn" id="addAnswerBt" value="1" style="display:inline-block" onclick="AddAnswer(value)"><i class="layui-icon"></i> 添加</button><button class="layui-btn" id="addAnswerBt" value="1" style="display:inline-block" onclick="RemoveAnswer(value)"><i class="layui-icon"></i> 删除</button></div>
        </div>
        <div style="text-align:center">
            <button class="layui-btn" id="add" onclick="AddQuestion()">
                <i class="layui-icon">&#xe608;</i> 添加
            </button>
            <button class="layui-btn" onclick="RemoveQuestion()">
                <i class="layui-icon">&#xe640;</i>删除
            </button>
        </div>
    </fieldset>

    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
    </div>
</form>
<div id="foot">&nbsp;</div>

<script src="~/Js/jquery.min.js"></script>
<script src="~/Js/bootstrap.min.js"></script>
<script src="~/layui/layui.js"></script>
<script src="~/Js/Create.js"></script>

